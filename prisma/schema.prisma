// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  sessionId   String    @id @default(auto()) @map("_id") @db.ObjectId
  id          String    @unique
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model QRCode {
  sessionId   String   @id @default(auto()) @map("_id") @db.ObjectId
  id          String   @unique
  shop        String
  destination String
  endpoint    String
  title       String
  fgColor     String
  bgColor     String
  pattern     String
  eye         String
  type        String
  imageUrl    String
  productId   String
  variantId   String
  createdAt   DateTime @default(now())
  expiredAt   DateTime
  isDeleted   Boolean
}

model Settings {
  sessionId        String @id @default(auto()) @map("_id") @db.ObjectId
  id               String @unique
  shop             String
  fgColor          String
  bgColor          String
  timeFormat       String
  hourFormat       String
  dateFormat       String
  dateStringFormat String
}
